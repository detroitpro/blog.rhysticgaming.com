<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if title %}{{ title }} | {% endif %}{{ metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
  <!-- Moxfield deck embed auto-sizing script -->
  <script>
    function moxfieldOnMessage(e) {
      // Only process messages from Moxfield domain for security
      if (e.origin !== 'https://www.moxfield.com' && e.origin !== 'https://moxfield.com') {
        return;
      }
      const t = e.data;
      if ("object" == typeof t && "moxfield" === t.type) {
        const frameElement = document.getElementById(t.id);
        if (frameElement) {
          frameElement.style.height = t.data + "px";
        }
      }
    }
    function moxfieldOnLoad(e) {
      if (e.target && e.target.contentWindow) {
        try {
          e.target.contentWindow.postMessage({
            type: "moxfield",
            data: e.target.id
          }, "*");
        } catch (err) {
          // Silently handle cross-origin errors (expected with iframes)
          // These are normal and don't affect functionality
        }
      }
    }
    window.addEventListener("message", moxfieldOnMessage);
  </script>
</head>
<body>
  <!-- Card Modal -->
  <div id="card-modal" class="card-modal" style="display: none;">
    <div class="card-modal-overlay"></div>
    <div class="card-modal-content">
      <button class="card-modal-close" aria-label="Close modal">&times;</button>
      <div class="card-modal-body">
        <div class="card-loading">Loading card...</div>
        <div class="card-display" style="display: none;">
          <img class="card-image" src="" alt="" />
          <a class="card-scryfall-link" href="" target="_blank" rel="noopener noreferrer">
            View on Scryfall â†’
          </a>
        </div>
        <div class="card-error" style="display: none;">
          <p>Card not found. Please check the card name.</p>
        </div>
      </div>
    </div>
  </div>
  <header class="site-header">
    <div class="container">
      <h1 class="site-title">
        <a href="{{ '/' | url }}">{{ metadata.title }}</a>
      </h1>
      <nav class="site-nav">
        <a href="{{ '/' | url }}">Home</a>
        <a href="{{ '/posts/' | url }}">Posts</a>
      </nav>
    </div>
  </header>

  <main class="main-content">
    <div class="container">
      {{ content | safe }}
    </div>
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>&copy; 2025 {{ metadata.author }}. Did you pay the {1}?</p>
    </div>
  </footer>
  <script src="{{ '/js/card-modal.js' | url }}"></script>
</body>
</html>

