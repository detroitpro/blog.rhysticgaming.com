---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <time class="post-date" datetime="{{ date | date('%Y-%m-%d') }}">
      {{ date | dateDisplay }}
    </time>
    {% if tags %}
    <div class="post-tags">
      {% for tag in tags %}
      <span class="tag">{{ tag }}</span>
      {% endfor %}
    </div>
    {% endif %}
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>

